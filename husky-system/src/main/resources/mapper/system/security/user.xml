<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.system.mapper.security.UserMapper">

    <resultMap id="baseMap" type="cn.caojiantao.system.model.security.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="nickname" property="nickname"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="getById" resultMap="baseMap" parameterType="cn.caojiantao.system.query.UserQuery">
        SELECT
            `id`,
            `username`,
            `nickname`,
            `gmt_create`,
            `gmt_modified`
        FROM system_user
        WHERE id = #{id}
    </select>

    <select id="getObjects" resultMap="baseMap" parameterType="cn.caojiantao.system.query.UserQuery">
        SELECT
        `id`,
        `username`,
        `nickname`,
        `gmt_create`,
        `gmt_modified`
        FROM system_user
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="id!=null">AND `id` = #{id}</if>
            <if test="username!=null and username!=''">AND `username` LIKE CONCAT('%',#{username},'%')</if>
            <if test="password!=null">AND `password` = #{password}</if>
        </trim>
        LIMIT #{start}, #{pagesize}
    </select>

    <select id="countObjects" resultType="int" parameterType="cn.caojiantao.system.query.UserQuery">
        SELECT COUNT(*)
        FROM system_user
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test="id!=null">AND `id` = #{id}</if>
            <if test="username!=null and username!=''">AND `username` LIKE CONCAT('%',#{username},'%')</if>
            <if test="password!=null">AND `password` = #{password}</if>
        </trim>
    </select>

    <!-- 想要获取最后一次插入的主键id，注意mybatis和ibatis的区别 -->
    <insert id="insert" parameterType="cn.caojiantao.system.model.security.User" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO system_user (`username`, `password`, `nickname`, `gmt_create`)
        VALUES (#{username}, #{password}, #{nickname}, #{gmtCreate})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM system_user
        WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="cn.caojiantao.system.model.security.User">
        UPDATE system_user
        <trim prefix="SET" suffix="WHERE id = #{id}" suffixOverrides=",">
            `gmt_modified` = #{gmtModified},
            <if test="username!=null and username!=''">`username` = #{username},</if>
            <if test="password!=null and password!=''">`password` = #{password},</if>
            <if test="nickname!=null and nickname!=''">`nickname` = #{nickname},</if>
        </trim>
    </update>

    <select id="getUserByUsernameAndPassword" resultMap="baseMap">
        SELECT
            `id`,
            `username`,
            `nickname`
        FROM system_user
        WHERE
            `username` = #{username}
            AND `password` = #{password}
    </select>
</mapper>