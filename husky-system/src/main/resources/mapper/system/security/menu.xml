<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.system.mapper.security.MenuMapper">

    <resultMap id="baseMap" type="cn.caojiantao.system.model.security.Menu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="href" property="href"/>
        <result column="icon_class" property="iconClass"/>
        <result column="component_path" property="componentPath" javaType="String"/>
        <result column="order" property="order"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="getById" resultMap="baseMap" parameterType="int">
        SELECT
            `id`,
            `name`,
            `parent_id`,
            `href`,
            `icon_class`,
            `order`,
            `component_path`,
            `gmt_create`,
            `gmt_modified`
        FROM system_menu
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="cn.caojiantao.system.model.security.Menu" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO system_menu (`name`, `parent_id`, `href`, `icon_class`, `component_path`, `order`, `gmt_create`)
        VALUES (#{name}, #{parentId}, #{href}, #{iconClass}, #{componentPath}, #{order}, #{gmtCreate})
    </insert>

    <update id="updateById" parameterType="cn.caojiantao.system.model.security.Menu">
        UPDATE system_menu
        <trim prefix="SET" suffix="WHERE id = #{id}">
            `name` = #{name},
            `parent_id` = #{parentId},
            `href` = #{href},
            `icon_class` = #{iconClass},
            `component_path` = #{componentPath},
            `order` = #{order},
            `gmt_modified` = #{gmtModified}
        </trim>
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM system_menu
        WHERE `id` = #{id}
    </delete>

    <select id="getMenusByUserId" resultMap="baseMap" parameterType="int">
        SELECT
            t1.*
        FROM
            system_menu AS t1,
            (
                SELECT
                    t1.menu_id
                FROM
                    system_role_menu AS t1,
                    ( SELECT role_id FROM system_user_role WHERE user_id = #{userId} ) AS t2
                WHERE
                    t1.role_id = t2.role_id
            ) AS t2
        WHERE
            t1.id = t2.menu_id
        ORDER BY t1.`order`
    </select>

    <select id="getAllMenus" resultMap="baseMap">
        SELECT * FROM system_menu ORDER BY `order`
    </select>

    <select id="getMenusByRoleId" resultMap="baseMap" parameterType="int">
        SELECT
            t1.*
        FROM
            system_menu AS t1,
            ( SELECT t1.menu_id FROM system_role_menu AS t1 WHERE t1.role_id = #{roleId} ) AS t2
        WHERE
            t1.id = t2.menu_id
        ORDER BY
            t1.`order`
    </select>
</mapper>