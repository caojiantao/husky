<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.system.mapper.dictionary.DictValueMapper">

    <resultMap id="baseMap" type="cn.caojiantao.system.model.dictionary.DictValue">
        <id column="id" property="id"/>
        <result column="set_id" property="setId"/>
        <result column="name" property="name"/>
        <result column="value" property="value"/>
        <result column="order" property="order"/>
        <result column="desc" property="desc"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="insert" parameterType="cn.caojiantao.system.model.dictionary.DictValue" keyProperty="id"
            useGeneratedKeys="true">
        INSERT INTO dict_value (set_id, name, value, `order`, `desc`, `gmt_create`)
        VALUES (#{setId}, #{name}, #{value}, #{order}, #{desc}, #{gmtCreate})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM dict_value
        WHERE id = #{id}
    </delete>

    <delete id="deleteDictValueBySetId" parameterType="int">
        DELETE FROM dict_value
        WHERE set_id = #{setId}
    </delete>

    <update id="updateById" parameterType="cn.caojiantao.system.model.dictionary.DictValue">
        UPDATE dict_value
        <trim prefix="SET" suffix="WHERE id = #{id}" suffixOverrides=",">
            `gmt_modified` = #{gmtModified},
            <if test='setId!=null'>`set_id` = #{setId},</if>
            <if test='name!=null'>`name` = #{name},</if>
            <if test='value!=null'>`value` = #{value},</if>
            <if test='order!=null'>`order` = #{order},</if>
            <if test='desc!=null'>`desc` = #{desc},</if>
        </trim>
    </update>

    <select id="getById" parameterType="int" resultMap="baseMap">
        SELECT
            `id`,
            `set_id`,
            `name`,
            `value`,
            `order`,
            `desc`,
            `gmt_create`,
            `gmt_modified`
        FROM dict_value
        WHERE id = #{id}
    </select>

    <select id="listObjects" parameterType="cn.caojiantao.system.query.DictionaryQuery" resultMap="baseMap">
        SELECT
        `id`,
        `set_id`,
        `name`,
        `value`,
        `order`,
        `desc`,
        `gmt_create`,
        `gmt_modified`
        FROM dict_value
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test='setId!=null'>AND set_id = #{setId}</if>
        </trim>
        ORDER BY `order`
        <if test="start!=null and offset!=null">
            LIMIT #{start}, #{offset}
        </if>
    </select>

    <select id="countObjects" parameterType="cn.caojiantao.system.query.DictionaryQuery" resultType="int">
        SELECT COUNT(*) FROM dict_value
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test='setId!=null'>AND set_id = #{setId}</if>
        </trim>
    </select>
</mapper>