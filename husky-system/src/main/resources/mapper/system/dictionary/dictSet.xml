<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.system.mapper.dictionary.DictSetMapper">

    <resultMap id="baseMap" type="cn.caojiantao.system.model.dictionary.DictSet">
        <id column="id" property="id"/>
        <result column="parent_value_id" property="parentValueId"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <insert id="insert" parameterType="cn.caojiantao.system.model.dictionary.DictSet" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO dict_set (`parent_value_id`, `code`, `name`, `desc`, `gmt_create`)
        VALUES (#{parentValueId}, #{code}, #{name}, #{desc}, #{gmtCreate})
    </insert>

    <delete id="deleteById" parameterType="int">
        DELETE FROM dict_set
        WHERE id = #{id}
    </delete>

    <update id="updateById" parameterType="cn.caojiantao.system.model.dictionary.DictSet">
        UPDATE dict_set
        <trim prefix="SET" suffix="WHERE id = #{id}" suffixOverrides=",">
            `gmt_modified` = #{gmtModified},
            <if test='parentValueId!=null'>`parent_value_id` = #{parentValueId},</if>
            <if test='code!=null'>`code` = #{code},</if>
            <if test='name!=null'>`name` = #{name},</if>
            <if test='desc!=null'>`desc` = #{desc},</if>
        </trim>
    </update>

    <select id="getById" parameterType="int" resultMap="baseMap">
        SELECT
            `id`,
            `parent_value_id`,
            `code`,
            `name`,
            `desc`,
            `gmt_create`,
            `gmt_modified`
        FROM dict_set
        WHERE id = #{id}
    </select>

    <select id="listObjects" parameterType="cn.caojiantao.system.query.DictionaryQuery" resultMap="baseMap">
        SELECT
        `id`,
        `parent_value_id`,
        `code`,
        `name`,
        `desc`,
        `gmt_create`,
        `gmt_modified`
        FROM dict_set
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test='code!=null and code!=""'>AND `code` = #{code}</if>
        </trim>
        <if test="start!=null and offset!=null">
            LIMIT #{start}, #{offset}
        </if>
    </select>

    <select id="countObjects" parameterType="cn.caojiantao.system.query.DictionaryQuery" resultType="int">
        SELECT COUNT(*) FROM dict_set
        <trim prefix="WHERE" prefixOverrides="AND">
            <if test='code!=null and code!=""'>AND `code` = #{code}</if>
        </trim>
    </select>
</mapper>