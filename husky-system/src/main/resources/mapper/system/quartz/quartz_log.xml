<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.huksy.system.mapper.quartz.QuartzLogMapper">

    <resultMap id="baseMap" type="cn.caojiantao.huksy.system.model.quartz.QuartzLog">
        <id column="id" property="id"/>
        <result column="quartz_id" property="quartzId"/>
        <result column="status" property="status"/>
        <result column="start_time" property="startTime"/>
        <result column="end_time" property="endTime"/>
        <result column="exception_message" property="exceptionMessage"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="getById" resultMap="baseMap">
        SELECT
            `id`,
            `quartz_id`,
            `status`,
            `start_time`,
            `end_time`,
            `exception_message`,
            `gmt_create`,
            `gmt_modified`
        FROM system_quartz_log
        WHERE id = #{id}
    </select>

    <select id="getList" resultMap="baseMap">
        SELECT
        `id`,
        `quartz_id`,
        `status`,
        `start_time`,
        `end_time`,
        `exception_message`,
        `gmt_create`,
        `gmt_modified`
        FROM system_quartz_log
        <if test="start!=null and pagesize!=null">
            LIMIT #{start}, #{pagesize}
        </if>
    </select>

    <select id="countList" resultType="int">
        SELECT COUNT(*)
        FROM system_quartz_log
    </select>

    <insert id="insert" parameterType="cn.caojiantao.huksy.system.model.quartz.QuartzLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO system_quartz_log (`quartz_id`, `status`, `start_time`, `end_time`)
        VALUES (#{quartzId}, #{status}, #{startTime}, #{endTime})
    </insert>
</mapper>