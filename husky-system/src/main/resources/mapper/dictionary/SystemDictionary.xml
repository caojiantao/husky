<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.husky.system.mapper.dictionary.SystemDictionaryMapper">

    <resultMap id="baseMap" type="cn.caojiantao.husky.system.entity.dictionary.SystemDictionary">
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="value" property="value"/>
        <result column="description" property="description"/>
        <result column="order" property="order"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="getDictionaryDTOById" parameterType="int" resultType="cn.caojiantao.husky.system.dto.SystemDictionaryDTO">
        SELECT t1.`id`,
               t1.`parent_id`    AS 'parentId',
               t1.`code`,
               t1.`name`,
               t1.`value`,
               t1.`description`,
               t1.`order`,
               t1.`gmt_create`   AS 'gmtCreate',
               t1.`gmt_modified` AS 'gmtModified',
               t2.`name`         AS 'parentName'
        FROM system_dictionary AS t1
                 LEFT JOIN system_dictionary AS t2 ON t1.parent_id = t2.id
        WHERE t1.id = #{id}
    </select>
</mapper>