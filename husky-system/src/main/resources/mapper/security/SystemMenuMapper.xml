<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace用作标识mapper的唯一，通常包名+文件名 -->
<mapper namespace="cn.caojiantao.husky.system.mapper.security.SystemMenuMapper">

    <resultMap id="baseMap" type="cn.caojiantao.husky.system.model.security.SystemMenu">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="href" property="href"/>
        <result column="icon_class" property="iconClass"/>
        <result column="component_path" property="componentPath" javaType="String"/>
        <result column="weight" property="weight"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
    </resultMap>

    <select id="getMenusByUserId" resultMap="baseMap" parameterType="int">
        SELECT
            t1.*
        FROM
            system_menu AS t1,
            (
                SELECT
                    t1.menu_id
                FROM
                    system_role_menu AS t1,
                    ( SELECT role_id FROM system_user_role WHERE user_id = #{userId} ) AS t2
                WHERE
                    t1.role_id = t2.role_id
            ) AS t2
        WHERE
            t1.id = t2.menu_id
        ORDER BY t1.`order`
    </select>

    <select id="getMenusByRoleId" resultMap="baseMap" parameterType="int">
        SELECT
            t1.*
        FROM
            system_menu AS t1,
            ( SELECT t1.menu_id FROM system_role_menu AS t1 WHERE t1.role_id = #{roleId} ) AS t2
        WHERE
            t1.id = t2.menu_id
        ORDER BY
            t1.`order`
    </select>
</mapper>